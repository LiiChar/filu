{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "filu",
	"version": "0.1.0",
	"identifier": "com.kypator.filu",
	"build": {
		"beforeDevCommand": "yarn dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "yarn build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "filu",
				"width": 800,
				"height": 550,
				"decorations": false,
				"theme": "Dark",
				"devtools": true,
				"transparent": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"cli": {
			"args": [
				{
					"name": "vidPath",
					"index": 1,
					"takesValue": true
				}
			]
		}
	}
}
